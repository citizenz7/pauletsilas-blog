{% extends 'base.html.twig' %}

{# {% block title %}User{% endblock %} #}

{% block importmap %}{{ importmap(['app', 'user']) }}{% endblock %}

{% block body %}
    {# <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ user.image }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.CreatedAt ? user.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>AuthorBio</th>
                <td>{{ user.authorBio }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }} #}

 <section class="user">
        <h1>Auteur : {{ user.firstname}} {{ user.lastname }}</h1>
        <div class="description">
            <div class="col1">
                <img src="{{ asset('uploads/img/users/' ~ user.image) }}" alt="{{ user.firstname }} {{ user.lastname }}">
            </div>
            <div class="col2">
                {{ user.authorBio|replace({'<div>': '', '</div>': '', '<p>': '', '</p>': ''})|raw }}
            </div>
        </div>
        <div class="cards">
            {% for article in user.articles|reverse %}
                {% if article is empty %}
                    <h2 class="title">Aucun article</h2>
                {% else %}
                    <div class="card">
                        <a href="{{ path('app_article_show', {'slug': article.slug}) }}">
                            <img src="{{ asset('uploads/img/articles/' ~ article.mainImage) }}" alt="{{ article.title }}" class="image">
                            <h2>{{ article.title }}</h2>
                        </a>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </section>
{% endblock %}
