{% extends '@!EasyAdmin/layout.html.twig' %}

{% block main %}

{# {{ dump() }} #}

<div class="container-fluid">
    <div class="row">
        <div class="col border rounded text-center pt-2">
            <h1 class="fw-bold">Tableau de Bord</h1>
            <p>
                Depuis le menu de gauche, vous pouvez administrer et gérer toutes les sections du site.
            </p>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-4 g-4 mt-5 justify-content-center">
        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2 class="card-title h5">NB d'utilisateurs</h2>
                    <h3 class="card-text">{{ users|length }}</h3>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2 class="card-title h5">Articles</h2>
                    <h3 class="card-text">{{ articles|length }}</h3>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2 class="card-title h5">Catégories</h2>
                    <h3 class="card-text">{{ categories|length }}</h3>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2 class="card-title h5">Commentaires</h2>
                    <h3 class="card-text">{{ comments|length }}</h3>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2 class="card-title h5">Fichiers</h2>
                    <h3 class="card-text">{{ fichiers|length }}</h3>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2 class="card-title h5">Images</h2>
                    <h3 class="card-text">{{ medias|length }}</h3>
                </div>
            </div>
        </div>

    </div>

{% endblock %}