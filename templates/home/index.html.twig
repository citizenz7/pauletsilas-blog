{% extends 'base.html.twig' %}

{# {% block title %}Bienvenue !{% endblock %} #}

{% block importmap %}{{ importmap(['app', 'home']) }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}

{% block body %}

    <div class="presentation">
        <img src="{{ asset('uploads/img/home/' ~ homePage.image) }}" alt="{{ homePage.imageAlt}}">
        <h1>{{ settings.siteName }}</h1>
        <p>{{ homePage.content|replace({'<div>': '', '</div>': '', '<p>': '', '</p>': '',})|raw }}</p>
    </div>

    <section class="home">
        <div class="main-title">Derniers articles</div>

        {# Flash message #}
        {% for flash in app.flashes('success') %}
            <div id="success" class="message-success">
                {{ flash }}
            </div>
        {% endfor %}

        <div class="cards">
            {% for article in articles %}
                <div class="card">
                    <img src="{{ asset('uploads/img/articles/' ~ article.mainImage) }}" alt="{{ article.title }}" class="img">
                    <p class="categories">
                        {% for category in article.categories %}
                            <a href="{{ path('app_category_show', {'slug': category.slug}) }}">{{ category.title }}</a>
                        {% endfor %}
                    </p>
                    {% if article.fichiers is not empty %}
                        <p class="joinfile">
                            <a href="{{ path('app_article_show', {'slug': article.slug}) }}#fichiers">
                                <i class="fa-regular fa-file-pdf"></i>
                                {{ article.fichiers|length }}
                            </a>
                        </p>
                    {% endif %}
                    {% if article.mediapic is not empty %}
                        <p class="joinpic">
                            <a href="{{ path('app_article_show', {'slug': article.slug}) }}#pics">
                                <i class="fa-regular fa-images"></i>
                                {{ article.mediapic|length }}
                            </a>
                        </p>
                    {% endif %}
                    <div class="meta">
                        <div>
                            <span class="date">Post√© le {{ article.postedAt|date('d/m/Y') }}</span>,
                            <span class="author">par {{ article.author }}</span>
                        </div>
                        {% if article.comments %}
                            {% if article.comments|length  == 0 %}
                                <span class="comments"><i class="fa-regular fa-comment"></i></span>
                            {% elseif article.comments|length  == 1 %}
                                <span class="comments">{{ article.comments|length }}
                                    <a href="{{ path('app_article_show', {'slug': article.slug}) }}#commentsarticle"><i class="fa-solid fa-comment"></i></a>
                                </span>
                            {% else %}
                                <span class="comments">{{ article.comments|length }}
                                    <a href="{{ path('app_article_show', {'slug': article.slug}) }}#commentsarticle"><i class="fa-solid fa-comments"></i></a>
                                </span>
                            {% endif %}
                        {% endif %}
                    </div>
                    <h2 class="title">
                        <a href="{{ path('app_article_show', {'slug': article.slug}) }}">
                            {{ article.title }}
                        </a>
                    </h2>
                    <div class="intro">{{ article.intro|raw }}</div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
