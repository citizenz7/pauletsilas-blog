                    <div class="card-body">
                        <div class="categories">
                            {% for category in article.categories %}
                                <a class="cat" href="#">{{ category.title }}</a>
                            {% endfor %}
                        </div>
                        <h2 class="title">{{ article.title }}</h2>
                        <div class="meta">
