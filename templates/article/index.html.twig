{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block importmap %}{{ importmap(['app', 'article']) }}{% endblock %}

{% block body %}
    <section class="article">
        <h1>Article index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Intro</th>
                    <th>Content</th>
                    <th>MainImage</th>
                    <th>MainImageAlt</th>
                    <th>PostedAt</th>
                    <th>UpdatedAt</th>
                    <th>Active</th>
                    <th>SeoTitle</th>
                    <th>SeoDescription</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.slug }}</td>
                    <td>{{ article.intro }}</td>
                    <td>{{ article.content }}</td>
                    <td>{{ article.mainImage }}</td>
                    <td>{{ article.mainImageAlt }}</td>
                    <td>{{ article.postedAt ? article.postedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ article.active ? 'Yes' : 'No' }}</td>
                    <td>{{ article.seoTitle }}</td>
                    <td>{{ article.seoDescription }}</td>
                    <td>
                        <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                        {# <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a> #}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="13">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# <a href="{{ path('app_article_new') }}">Create new</a> #}
    </section>
{% endblock %}
