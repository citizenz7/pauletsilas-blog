{% extends 'base.html.twig' %}

{% block title %}Article : {{ article.title }}{% endblock %}

{% block javascripts %}
    {% block importmap %}{{ importmap(['app', 'article']) }}{% endblock %}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}

{% block body %}
    {# {{ dump() }} #}

    <section class="article">
        <h1>{{ article.title }}</h1>

        <div class="categories">
            {% for cat in article.categories %}
                <a class="cat" href="{{ path('app_category_show', {'slug': cat.slug}) }}">{{ cat.title }}</a>
            {% endfor %}
        </div>

        <div class="meta">
            Posté le : {{ article.postedAt|date('d-m-Y') }}
            {% if article.updatedAt %}
                | Mis à jour le : {{ article.updatedAt|date('d-m-Y') }}
            {% endif %}

            {% set nbc = article.comments|length %}
            | {% if nbc == 1 %}
                <a href="#comments">
                    {{ nbc }} commentaire
                </a>
            {% else %}
                <a href="#comments">
                    {{ nbc }} commentaires
                </a>
            {% endif %}
        </div>

        <img src="{{ asset('uploads/img/articles/' ~ article.mainImage) }}" alt="{{ article.mainImageAlt }}" class="img">

        <div class="intro">{{ article.intro|raw }}</div>
        <div class="content">{{ article.content|raw }}</div>

        <div class="author-bio">
            <img src="{{ asset('uploads/img/users/' ~ article.author.image) }}" alt="{{ article.author.firstName }} {{ article.author.lastName }}" class="author-image">
            <div>
                Posté par {{ article.author }}
                {{ article.author.authorBio|raw }}
            </div>
        </div>

        {% if article.mediapic is not empty %}
            <h2 id="pics" class="galerie-title">Galerie photos</h2>
            <div class="mediapics">
                {% for pic in article.mediapic %}
                    <a href="{{ asset('uploads/img/articles/pics/' ~ pic.image) }}" target="_blank">
                        <img src="{{ asset('uploads/img/articles/pics/' ~ pic.image) }}" alt="{{ pic.imageAlt }}">
                    </a>
                {% endfor %}
            </div>
        {% endif %}

        {% if article.fichiers is not empty %}
            <h2 id="fichiers" class="galerie-title">Documents PDF</h2>
            <div class="fichiers">
                {% for file in article.fichiers %}
                    <a href="{{ asset('uploads/files/articles/' ~ file.fichierFile) }}">
                    <i class="fa-solid fa-file-pdf fa-4x"></i><br>{{ file.title }}</a>
                {% endfor %}
            </div>
        {% endif %}

        {# Flash message #}
        {% for flash in app.flashes('success') %}
            <div id="success" class="message-success">
                {{ flash }}
            </div>
        {% endfor %}

        <div id="comments" class="comments">
            {# On affiche QUE si le user est connecté ! #}
            {% if app.user %}
                <h2 class="title">Poster un nouveau commentaire</h2>
                {{ form_start(form) }}
                    {{ form_row(form.content) }}
                    <div style="text-align: right;">
                        {{ form_row(form.submit) }}
                    </div>
                {{ form_end(form) }}
            {% endif %}

            <h2 id="commentsarticle" class="title">Les commentaires de l'article</h2>
            {% for com in article.comments %}
                {% if com.approved == true %}
                    <div class="comment">
                        <h3 style="font-size: clamp(11px, 1.5vw, 13px);">#{{ com.id }} Par {{ com.author }}, le {{ com.createdAt|date('d/m/Y H:i') }}</h3>
                        <div>{{ com.content|raw }}</div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

    </section>
{% endblock %}
