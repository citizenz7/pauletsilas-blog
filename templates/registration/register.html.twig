{% extends 'base.html.twig' %}

{# {% block title %}Créer un compte{% endblock %} #}

{% block importmap %}{{ importmap(['app', 'register']) }}{% endblock %}

{% block body %}
    <section class="register">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <div class="register-container">
            <div class="col1">
                <h1>Créer un compte</h1>
                <div class="intro">
                    {{ settings.siteRegisterText|raw }}
                </div>
                <img src="{{ asset('uploads/img/' ~ settings.siteRegisterImage)|imagine_filter('registerImage') }}" alt="{{ settings.siteRegisterImageAlt }}">
            </div>
            <div class="col2">
                {# {{ form_errors(registrationForm) }} #}
                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword) }}
                    {{ form_row(registrationForm.firstname) }}
                    {{ form_row(registrationForm.lastname) }}
                    <div class="terms">
                        <span class="text">
                            J'accepte les <a href="{{ path('app_cgu') }}">Conditions Générales d'Utilisation</a>
                        </span>
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                    <button type="submit" class="btn">Créer un compte</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}