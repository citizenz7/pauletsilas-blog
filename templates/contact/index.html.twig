{% extends 'base.html.twig' %}

{# {% block title %}Contact{% endblock %} #}

{% block importmap %}{{ importmap(['app', 'contact']) }}{% endblock %}

{% block body %}

    <div class="presentation">
        <img src="{{ asset('uploads/img/contact/' ~ contact.image)|imagine_filter('heroHome') }}" alt="{{ contact.imageAlt}}">
        <h1>{{ contact.mainTitle }}</h1>
        {# <p>{{ home.content|replace({'<div>': '', '</div>': '', '<p>': '', '</p>': '',})|raw }}</p> #}
    </div>

    <section class="contact">
        <div class="content">
            {{ contact.content|raw }}
        </div>
        <div class="formulaire">
            {% for message in app.flashes('success') %}
                <div class="message-success">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
                <div>{{ form_row(form.nom) }}</div>
                <div>{{ form_row(form.email) }}</div>
                <div>{{ form_row(form.sujet) }}</div>
                <div>{{ form_row(form.message) }}</div>
                <div>{{ form_row(form.captcha) }}</div>
            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}
