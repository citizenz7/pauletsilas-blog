{% extends 'base.html.twig' %}

{% block title %}C.G.U.{% endblock %}

{% block importmap %}{{ importmap(['app', 'cgu']) }}{% endblock %}

{% block body %}

    <section class="cgu">
        <h1>{{ cgu.mainTitle }}</h1>
        <div>
            <img src="{{ asset('uploads/img/cgu/' ~ cgu.image) }}" alt="{{ cgu.imageAlt }}" class="image">
            {{ cgu.content|raw }}
        </div>
    </section>

{% endblock %}
